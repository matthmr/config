# term-mode
super + control + Return; shift + u
  urxvt -e zsh
super + control + Return; shift + s
  st -e zsh
super + control + Return; shift + x
  xterm -e zsh
super + control + Return; u
  urxvt -e tmux new-session -A
super + control + Return; s
  st -e tmux new-session -A
super + control + Return; x
  xterm -e tmux new-session -A

# action-mode
# TODO: add an interactive [Y/n] for the `rc-' ACPI family
super + control + a; shift + s
  doshutdown -x
super + control + a; shift + r
  doreboot -x
super + control + a; shift + m
  dosuspend -x
super + control + a; shift + d
  dohibernate -x
super + control + a; l
  i3lock -i '/home/mh/Images/Wallpapers/vapor/apollo.png' -e -f -b -n -t -p default

# launch-mode
super + control + l; a
  alsa-dmenu
super + control + l; b
  ungoogled-chromium
super + control + l; f
  firefox
super + control + l; m
  mpc-dmenu
super + control + l; s
  screenshot-dir
super + control + l; q
  screenshot-quick
super + control + l; j
  japanese-dmenu
super + control + l; l
  urxvt -e lf -single
super + control + l; e
  emacstc
super + control + l; shift + e
  emacs-x

# misc
# we start `wm' in a dbus session, we need everything that is started
# by dmenu to have the address set by the session. The same is not true
# for terminal-started applications
#super + p
#	dmenu_run
super + c
  clipmenu
super + control + q
  xkill
super + control + r
  /home/mh/Scripts/x/resize
super + control + d
  /home/mh/Scripts/sxhkd-reload.sh

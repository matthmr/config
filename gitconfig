# Github CLI for pushing to github
[credential "https://github.com"]
  helper = !/mnt/ssd/root/usr/bin/gh auth git-credential

# Global configs
[user]
  name = mh
  email = observermatth@gmail.com
[pull]
  rebase = false
[init]
  defaultBranch = master
[color]
  ui = true
[core]
  pager = less -r
  editor = emacsc
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[push]
  autoSetupRemote = true
  followTags = true
[status]
  short = true
[log]
  date = format:%Y%m%d%H%M
[blame]
  date = format:%Y%m%d%H%M
[pager]
  branch = false
  tag    = false
  stash  = false

# Git aliases
[alias]
  lg = log --stat --patch
  sl = log --oneline
  gl = log --oneline --abbrev-commit --graph
  df = diff --stat --patch --color=always
  fe = fetch
  cm = commit
  ad = add
  br = branch
  mg = merge
  sm = merge --squash
  sh = show --stat --patch
  st = status
  ss = stash
  ch = checkout
  cp = cherry-pick -n
  rs = restore
  rt = reset
  rv = revert
  tg = tag
  bl = blame
  ap = add -p
  rp = restore -p
  ss = stash
  mm = merge --no-ff --no-commit
  mp = pull  --no-ff --no-commit

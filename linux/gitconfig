[credential "https://github.com"]
  helper = @GIT_HELPER@

# Global configs
[user]
  name  = @GIT_NAME@
  email = @GIT_EMAIL@
[pull]
  rebase = false
[init]
  defaultBranch = master
[color]
  ui = true
[core]
  pager  = less -r
  editor = emacsc
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[push]
  autoSetupRemote = true
  followTags = true
[status]
  short  = true
[log]
  date   = format:%Y%m%d%H%M
[blame]
  date     = format:%Y%m%d%H%M
[pager]
  branch = false
  tag    = false
  stash  = false
  grep   = false

# Git aliases
[alias]
  lg  = log --stat --patch
  sl  = log --oneline
  gl  = log --oneline --abbrev-commit --graph
  df  = diff --stat --patch --color=always
  fe  = fetch --verbose
  cm  = commit --verbose
  ad  = add --verbose
  br  = branch
  pl  = pull --verbose
  mg  = merge
  sm  = merge --squash
  sh  = show --stat --patch
  st  = status
  ch  = checkout
  chp = checkout -p
  cp  = cherry-pick -n
  rs  = restore
  rt  = reset
  rv  = revert
  tg  = tag
  bl  = blame --color-lines
  adp = add -p
  rsp = restore -p
  ss  = stash
  mm  = merge --no-ff --no-commit
  mp  = pull  --no-ff --no-commit
  sr  = show-ref
  sw  = switch

#### General

# create the directory
exec --no-startup-id mkdir -p /tmp/i3

# set the socket path
ipc-socket /tmp/i3/i3-socket

# font
font pango:JetBrains Mono 12

# set workspace
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"

title_align center
#workspace_layout tabbed
#for_window [all] title_window_icon on
default_border normal 2

#### Bindings

# modifier key
set $mod Mod4
set $alt Mod1

# toggle bar
bindsym $mod+b bar mode invisible
bindsym $mod+Shift+b bar mode dock

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
bindsym $mod+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left 15 px
bindsym $mod+Shift+j move down 15 px
bindsym $mod+Shift+k move up 15 px
bindsym $mod+Shift+l move right 15 px

# set split direction
bindsym $mod+Control+l split h
bindsym $mod+Control+j split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+d layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+s layout toggle split

# toggle tiling / floating
bindsym $mod+Control+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent/child container
bindsym $mod+Control+u focus parent
bindsym $mod+Control+d focus child

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5

# mouse position
bindsym $mod+Control+m move position mouse
bindsym $mod+Control+c move absolute position center
focus_follows_mouse no

# scratchpad
bindsym $mod+Control+p move scratchpad
bindsym $mod+Shift+p scratchpad show

# workspace cycling
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# swaps
bindsym $mod+m mark swapee
bindsym $mod+Shift+m unmark swapee
bindsym $mod+n swap container with mark swapee

#### Style

#                       border  bg      txt     indic     chbordr
client.focused          #303030 #303030 #ffffff #aaaaaa   #303030
client.focused_inactive #222222 #222222 #ffffff #484e50   #222222
client.unfocused        #222222 #222222 #888888 #292d2e   #222222

client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

#### Modes

mode "action" {
  bindsym q exec i3-msg exit; mode "default"
  bindsym l reload; mode "default"
  bindsym r restart; mode "default"

  bindsym Control+g mode "default"
  bindsym Control+bracketleft mode "default"
  bindsym Escape mode    "default"
}

bindsym $mod+Control+e resize grow width 15px
bindsym $mod+Shift+e resize shrink width 15px

bindsym $mod+Control+v resize grow height 15px
bindsym $mod+Shift+v resize shrink height 15px

bindsym $mod+$alt+Control+h resize grow left 15px
bindsym $mod+$alt+Control+j resize grow down 15px
bindsym $mod+$alt+Control+k resize grow up 15px
bindsym $mod+$alt+Control+l resize grow right 15px

bindsym $mod+$alt+Shift+h resize shrink right 15px
bindsym $mod+$alt+Shift+j resize shrink up 15px
bindsym $mod+$alt+Shift+k resize shrink down 15px
bindsym $mod+$alt+Shift+l resize shrink left 15px

bindsym $mod+Control+a mode "action"

#### Status Bar

bar {
  # status_command i3status
  status_command i3blocks

  # <class> <border> <bg> <txt>
  colors {
    background         #222222
    statusline         #FFFFFF
    active_workspace   #303030 #303030 #FFFFFF
    inactive_workspace #222222 #222222 #888888
    focused_workspace  #303030 #303030 #FFFFFF
  }

  font pango:JetBrains Mono 12

  position top # min
}

#### term-mode

super + Return
  urxvt -e tmux new-session -A
super + control + Return
  urxvt -e zsh

#### action-mode

super + control + x; a; s
  doshutdown -x
super + control + x; a; r
  doreboot -x
super + control + x; a; m
  dosuspend -x
super + control + x; a; d
  dohibernate -x
super + control + x; a; control + s
  doshutdown -x -f
super + control + x; a; control + r
  doreboot -x -f
super + control + x; a; l
  i3lock-wp

#### launch-mode

super + control + x; l; b
  ungoogled-chromium
super + control + x; l; f
  firefox
super + control + x; l; l
  urxvt -e lf -single
super + control + x; l; e
  emacstc

#### screenshot

super + control + x; s; d
  screenshot-dir
super + control + x; s; Q
  screenshot-quick-dir
super + control + x; s; q
  screenshot-quick

#### MPD

super + control + x; m; space
  mpc toggle >/dev/null 2>/dev/null
super + control + x; m; n
  mpc next >/dev/null 2>/dev/null
super + control + x; m; p
  mpc prev >/dev/null 2>/dev/null
super + control + x; m; s
  mpc stop >/dev/null 2>/dev/null
# min
super + control + x; m; equal
  mpc volume +10 >/dev/null 2>/dev/null
# min
super + control + x; m; minus
  mpc volume -10 >/dev/null 2>/dev/null
# min
super + control + x; m; comma
  mpc seek -5% >/dev/null 2>/dev/null
# min
super + control + x; m; period
  mpc seek +5% >/dev/null 2>/dev/null

##### X

super + control + x; x; k
  xkill
super + control + x; x; r
  @SXHKDRC_RESIZE@
super + control + x; x; s
  @SXHKDRC_RELOAD@
super + control + x; x; x
  xterm -e tmux new-session -A
super + control + x; x; X
  xterm -e zsh

#### wallpaper

super + control + x; w; n
  wpset -d @SXHKDRC_WPDIR@
super + control + x; w; r
  wpset -t -r
super + control + x; w; l
  nsxiv -r @SXHKDRC_WPDIR@

#### statusbar

super + control + x; b; q
  polybar-sendmsg cmd quit
super + control + x; b; r
  polybar-sendmsg cmd quit ; sleep 3 && polybar-start mh-$SESSION
super + control + x; b; a
  polybar-sendmsg cmd quit ; sleep 3 && polybar-start mh-$SESSION-alt

#### misc

super + alt + x
  dmenu_run
super + alt + y
  clipmenu
super + g
  killpid /tmp/statusbar-pid -USR1 2>/dev/null
super + b
  polybar-sendmsg cmd toggle

#### term-mode

super + Return
  urxvt -e tmux new-session -A
super + control + Return
  urxvt -e zsh

#### action-mode

super + control + x; a; s
  doshutdown -x
super + control + x; a; r
  doreboot -x
super + control + x; a; m
  dosuspend -x
super + control + x; a; d
  dohibernate -x
super + control + x; a; S
  doshutdown -x -f
super + control + x; a; R
  doreboot -x -f

# super + control + x; a; l
#   i3lock -i @SXHKDRC_IMAGE@ -e -f -b -n -t -p default

#### launch-mode

super + control + x; l; b
  ungoogled-chromium
super + control + x; l; f
  firefox
super + control + x; l; l
  urxvt -e lf -single
super + control + x; l; e
  emacstc

#### screenshot

super + control + x; s; d
  screenshot-dir
super + control + x; s; Q
  screenshot-quick-dir
super + control + x; s; q
  screenshot-quick

#### MPD

super + control + x; m; space
  mpc toggle >/dev/null 2>/dev/null
super + control + x; m; n
  mpc next >/dev/null 2>/dev/null
super + control + x; m; p
  mpc prev >/dev/null 2>/dev/null
super + control + x; m; s
  mpc stop >/dev/null 2>/dev/null
super + control + x; m; equal
  mpc volume +10 >/dev/null 2>/dev/null
super + control + x; m; minus
  mpc volume -10 >/dev/null 2>/dev/null

##### X

super + control + x; x; c
  clipmenu
super + control + x; x; k
  xkill
super + control + x; x; r
  @SXHKDRC_RESIZE@
super + control + x; x; l
  @SXHKDRC_RELOAD@
super + control + x; x; n
  wpnew
super + control + x; x; x
  xterm -e tmux new-session -A
super + control + x; x; X
  xterm -e zsh

#### misc

super + control + alt + x
  dmenu_run
super + b
  polybar-sendmsg cmd toggle
super + control + p
  polybar-sendmsg cmd quit ; polybar-start mh-$SESSION
super + control + alt + p
  polybar-sendmsg cmd quit ; polybar-start mh-$SESSION-alt

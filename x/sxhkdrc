#### term-mode

# min
super + Return
  urxvt -T urxvt -e tmux new-session -A # -b 10
# min
super + control + Return
  urxvt -T urxvt -e zsh # -b 10

#### action-mode

super + control + x; a; s
  doshutdown -x
super + control + x; a; r
  doreboot -x
super + control + x; a; m
  dosuspend -x
super + control + x; a; d
  dohibernate -x
super + control + x; a; control + s
  doshutdown -x -f
super + control + x; a; control + r
  doreboot -x -f
super + control + x; a; control + m
  dosuspend -x -f
super + control + x; a; control + d
  dohibernate -x -f
super + control + x; a; l
  i3lock-wp

#### launch-mode

super + control + x; l; c
  ungoogled-chromium
super + control + x; l; f
  firefox
super + control + x; l; l
  urxvt -e lf -single
super + control + x; l; p
  pcmanfm
super + control + x; l; e
  emacstc

#### volume-mode
# min
super + control + x; v; minus
  volume -5
# min
super + control + x; v; equal
  volume +5
super + control + x; v; v
  herbec "$(volume)"
super + control + x; v; m
  volume m

#### screenshot

super + control + x; s; l
  pcmanfm @SXHKDRC_SHOT_DIR@
super + control + x; s; s
  screenshot -d @SXHKDRC_SHOT_DIR@
super + control + x; s; control + s
  screenshot -d -f @SXHKDRC_SHOT_DIR@
super + control + x; s; q
  screenshot -q /tmp
super + control + x; s; control + q
  screenshot -q -f /tmp

#### MPD

super + control + x; m; space
  mpc toggle >/dev/null 2>/dev/null
super + control + x; m; n
  mpc next >/dev/null 2>/dev/null
super + control + x; m; p
  mpc prev >/dev/null 2>/dev/null
super + control + x; m; s
  mpc stop >/dev/null 2>/dev/null
# min
super + control + x; m; equal
  mpc volume +10 >/dev/null 2>/dev/null
# min
super + control + x; m; minus
  mpc volume -10 >/dev/null 2>/dev/null
# min
super + control + x; m; comma
  mpc seek -5% >/dev/null 2>/dev/null
# min
super + control + x; m; period
  mpc seek +5% >/dev/null 2>/dev/null
# min
super + control + x; m; m
  herbec "$(MPC_FORMAT='[%title%|%file%][ - %artist%[ "%album%"][ (%date%)]]' mpc)"
super + control + x; m; q
  herbec "$(MPC_FORMAT='[%title%|%file%][ - %artist%[ "%album%"][ (%date%)]]' mpc queue)"

##### X

super + control + x; x; k
  xkill
super + control + x; x; r
  @SXHKDRC_RESIZE@
super + control + x; x; s
  pkill -USR1 sxhkd

#### wallpaper

super + control + x; w; n
  wpset -d @SXHKDRC_WPDIR@ -w
super + control + x; w; control + n
  wpsetdc next
super + control + x; w; control + k
  wpsetdc kill
super + control + x; w; r
  wpset -r
super + control + x; w; control + r
  wpset -R -t
super + control + x; w; l
  nsxiv -r @SXHKDRC_WPDIR@

#### statusbar

super + control + x; b; q
  polybar-sendmsg cmd quit
super + control + x; b; b
  polybar-sendmsg cmd quit ; sleep 3 && polybar-start mh-$SESSION
super + control + x; b; a
  polybar-sendmsg cmd quit ; sleep 3 && polybar-start mh-$SESSION-alt

#### misc

super + alt + p
  pass-dmenu
super + alt + x
  dmenu_run
super + alt + y
  clipmenu
super + g
  pkill -USR1 -F /tmp/statusbar-pid >/dev/null 2>/dev/null
super + b
  polybar-sendmsg cmd toggle
